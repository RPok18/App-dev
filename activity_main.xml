<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing">

    <!-- 图片显示区域 Picture display area-->

    <!-- 输入角度按钮 Enter angle button-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450dp"
        android:layout_height="487dp"
        android:adjustViewBounds="true"
        android:src="@drawable/picture1" />

    <Button
        android:id="@+id/angleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rotate"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 滤镜按钮 filter button -->

    <!-- 滤镜选项菜单 Filter options menu-->
    <Button
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="17dp"
        android:text="filter" />

    <LinearLayout
        android:id="@+id/filterMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/filterButton"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <!-- 黑白滤镜按钮 Black and white filter button -->
        <Button
            android:id="@+id/blackWhiteFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BandW" />

        <!-- 红色滤镜按钮 red filter button-->
        <Button
            android:id="@+id/redFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:layout_marginStart="16dp" />

        <!-- 绿色滤镜按钮 green filter button -->
        <Button
            android:id="@+id/greenFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G"
            android:layout_marginStart="16dp" />


    </LinearLayout>

</RelativeLayout>
